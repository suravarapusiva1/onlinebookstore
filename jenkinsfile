pipeline{
    agent any 
    environment{
        PATH ="$PATH:/opt/Apache Maven 3.6.3/bin"
    }
    stages{
        stage("built stage"){
            steps{
                sh "mvn clean install"
            }
        }
       stage("test stage"){
            steps{
                sh "mvn test"
            }
        }
        stage("sonarcube anyalsis"){
            environment{
                def scannerHome = tool('sonarQubescanner 9.5')
            }
            steps {
                withSonarQubeEnv('sonarserver 9.5') {
                 sh " ${scannerHome} mvn sonar:sonar "
                }
            }
        }
    }
}