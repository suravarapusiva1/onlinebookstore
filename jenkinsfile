pipeline{
    agent any 
    environment{
        PATH ="$PATH:/opt/Apache Maven 3.6.3/bin"
    }
    stages{
        stage("built stage"){
            steps{
                sh "mvn clean install"
            }
        }
       stage("test stage"){
            steps{
                sh "mvn test"
            }
        }
        stage("sonarcube anyalsis"){
            environment{
                def scannerHome = tool('sonarQubescanner 9.5')
            }
            steps {
                withSonarQubeEnv('sonarserver 9.5') {
                sh "mvn clean verify sonar:sonar \
                 -Dsonar.projectKey=onlinebookstore \
                 -Dsonar.host.url=http://54.221.1.200:9092 \
                 -Dsonar.login=sqp_156154c887d7c065c29442944d34fcf4e3dd4dfe"
                }
            }
        }
    }
}